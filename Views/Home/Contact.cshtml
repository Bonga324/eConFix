@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<!-- Styling for the Contact Page -->
<style>
    body {
        
        background-image: url('../../Images/Bluepic.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: white;
        margin: 0;
        padding: 0;
    }

    h2, h3 {
        text-align: center;
        font-size: 2.5em;
        margin-top: 20px;
        color: #fff;
    }

    h3 {
        font-size: 1.6em;
        margin-bottom: 40px;
    }

    /* Contact Container Styling */
    .contact-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 40px;
        background-color: rgba(0, 0, 0, 0.7); /* Dark overlay for better contrast */
        border-radius: 12px;
        margin: 20px;
        max-width: 800px;
        margin: 0 auto;
    }

    /* Styling for Address Section */
    .address-info {
        font-size: 1.4em;
        line-height: 1.8em;
        text-align: center;
        color: #f1f1f1;
        margin-bottom: 25px;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.6); /* Soft dark background for each address block */
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

        .address-info strong {
            font-weight: bold;
            color: #00aaff;
        }

        .address-info a {
            color: #00aaff;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            .address-info a:hover {
                color: #0088cc;
                text-decoration: underline;
            }
</style>

<!-- Contact Information Section -->
<div class="contact-container">
    <div class="address-info">
        <strong>Physical Address:</strong><br />
        Cleveland Place, Bulwer<br />
        Berea, Durban, South Africa
    </div>

    <div class="address-info">
        <strong>Company 25 Support Team:</strong><br />
        +27(0) 313 215627
    </div>

    <div class="address-info">
        <strong>Support Email:</strong><br />
        <a href="mailto:econfixway.ac.za">econfixway.ac.za</a>
    </div>
</div>


