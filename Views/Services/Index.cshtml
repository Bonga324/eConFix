@model IEnumerable<eConFix.Models.Services>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    <link href="~/Content/Services/Index.css" rel="stylesheet" />
    <script src="~/Content/Services/Index.js"></script>
}

<style>
    body {
     
        
        background-position: inherit;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
