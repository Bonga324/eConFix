<div class="row">
    <div class="col-md-6">

        <h2>Offered services</h2>
        <div>
            <p>
                @Html.ActionLink("Add new service", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.serviceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.servicePrice)
                    </th>
                    <th>Actions</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.serviceName)
                        </td>
                        <td>
                            R @Html.DisplayFor(modelItem => item.servicePrice)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.serviceId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.serviceId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <!--Admins list-->
    <div class="col-md-6">
        @Html.Action("_Admins")
    </div>
</div>

<div>
    <div class="col-lg-6">
        <!--Bookings list-->
        @Html.Action("_Bookings")
    </div>
    <div class="col-lg-6">
        @Html.Action("_Registered")
    </div>
</div>
